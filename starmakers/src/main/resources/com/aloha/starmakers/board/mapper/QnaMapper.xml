<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aloha.starmakers.board.mapper.QnaMapper">

    <!-- 게시판 조회 -->
    <select id="list" resultType="QnaBoard">
        SELECT *
        FROM qna_board
       
    </select>

    <!-- 게시글 조회 -->
    <select id="select" resultType="QnaBoard">
        SELECT * 
        FROM   qna_board
        WHERE  qna_no = #{qnaNo}
    </select>


    <!-- 글 등록 -->
    <insert id="insert">
        INSERT INTO qna_board(title, writer, content, status, user_no)
        VALUES (#{title}, #{writer}, #{content},#{status},#{userNo})
    </insert>
    
    <!-- 게시글 수정 -->
    <update id="update">
        UPDATE qna_board
        SET title = #{title},
            writer = #{writer},
            content = #{content}
        WHERE qna_no = #{qnaNo}
    </update>


</mapper>